<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorDietas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fondo_dietas_foreground"
    android:tag="fd"
    tools:context=".FragmentoDietas">

    <TextView
        android:id="@+id/tv_dietas"
        android:layout_width="176dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Escoja su tipo de dieta: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_dietas"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_descripcionDieta"
        android:layout_width="379dp"
        android:layout_height="167dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_observacionesDieta"
        android:layout_width="376dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="344dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_agnadirDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="628dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Añadir dieta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_borrarDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="628dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Eliminar dieta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombreDieta"
        android:layout_width="362dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_dieta"
        android:layout_width="370dp"
        android:layout_height="148dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:src="@mipmap/ic_pecho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="360dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:text="DESCRIPCIÓN"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_observaciones"
        android:layout_width="360dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="312dp"
        android:text="OBSERVACIONES"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_dieta2"
        android:layout_width="376dp"
        android:layout_height="103dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="372dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>